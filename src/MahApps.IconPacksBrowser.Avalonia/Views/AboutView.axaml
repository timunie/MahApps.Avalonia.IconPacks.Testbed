<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="clr-namespace:LiveMarkdown.Avalonia;assembly=LiveMarkdown.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MahApps.IconPacksBrowser.Avalonia.Views.AboutView">

    <Border Margin="20"
            CornerRadius="10"
            BoxShadow="5 5 7 5 gray">
        <ScrollViewer ClipToBounds="True">
            <md:MarkdownRenderer x:Name="MarkdownRenderer" Margin="20" />
        </ScrollViewer>
    </Border>

</UserControl>