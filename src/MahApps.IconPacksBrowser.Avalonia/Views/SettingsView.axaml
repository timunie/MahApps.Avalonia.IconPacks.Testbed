<UserControl x:Class="MahApps.IconPacksBrowser.Avalonia.Views.SettingsView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:MahApps.IconPacksBrowser.Avalonia.Controls"
             xmlns:converters="clr-namespace:MahApps.IconPacksBrowser.Avalonia.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prop="clr-namespace:MahApps.IconPacksBrowser.Avalonia.Properties"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:viewModels="clr-namespace:MahApps.IconPacksBrowser.Avalonia.ViewModels"
             xmlns:helper="clr-namespace:MahApps.IconPacksBrowser.Avalonia.Helper"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="viewModels:SettingsViewModel"
             helper:DialogManager.Register="{Binding}"
             mc:Ignorable="d">
    <UserControl.DataTemplates>
        <DataTemplate DataType="Color">
            <Grid x:Name="RootGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Width="{Binding $self.Bounds.Height}"
                        BorderThickness="1">
                    <Rectangle RadiusX="5" RadiusY="5">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="{Binding TargetNullValue=Transparent}" />
                        </Rectangle.Fill>
                    </Rectangle>
                </Border>

                <TextBlock Grid.Column="1"
                           Margin="2,0,0,0"
                           VerticalAlignment="Center"
                           Text="{Binding Converter={converters:ColorToNameConverter}}" />
            </Grid>
        </DataTemplate>
    </UserControl.DataTemplates>


    <ScrollViewer Grid.IsSharedSizeScope="True" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Spacing="15">
            <fa:SettingsExpander Description="Configure the appearance of the App"
                                 Header="Design"
                                 IsExpanded="True">
                <StackPanel Spacing="5">
                    <controls:HeaderedControl Header="App Color">
                        <ComboBox HorizontalAlignment="Stretch"
                                  ItemsSource="{Binding Source={x:Static converters:ColorToNameConverter.AccentColorNames}, Path=Keys}"
                                  SelectedItem="{Binding Settings.AccentColor}" />
                    </controls:HeaderedControl>
                    <controls:HeaderedControl Header="Theme">
                        <ComboBox HorizontalAlignment="Stretch"
                                  SelectedItem="{Binding Settings.AppTheme}">
                            <system:String>Default</system:String>
                            <system:String>Light</system:String>
                            <system:String>Dark</system:String>
                        </ComboBox>
                    </controls:HeaderedControl>
                </StackPanel>
            </fa:SettingsExpander>

            <fa:SettingsExpander Header="Export" IsExpanded="True"
                                 Description="Directory for custom export templates">

                <StackPanel Spacing="5">
                    <HyperlinkButton Content="{Binding Settings.ExportTemplatesDir}" 
                                     NavigateUri="{Binding Settings.ExportTemplatesDir}"
                                     IsVisible="{Binding Settings.ExportTemplatesDir, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                    <Button Command="{Binding SelectTemplateFolderCommand}"
                            HorizontalAlignment="Stretch"
                            Content="Select a custom template folder" />
                    <Button Command="{Binding ClearTemplatesDirCommand}" Content="Reset template folder to default"
                            HorizontalAlignment="Stretch"/>
                    <Button Command="{Binding CopyOriginalTemplatesCommand}" Content="Copy original templates to custom folder"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </fa:SettingsExpander>

        </StackPanel>
    </ScrollViewer>
</UserControl>