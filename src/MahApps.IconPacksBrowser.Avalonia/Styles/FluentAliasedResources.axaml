<ResourceDictionary xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Alias FluentAvalonia resource keys to Avalonia.Themes.Fluent nearest equivalents -->

  <!-- Accent colors/brushes -->
  <StaticResource x:Key="AccentFillColorDefaultBrush" ResourceKey="SystemControlBackgroundAccentBrush" />
  <StaticResource x:Key="AccentFillColorTertiaryBrush" ResourceKey="SystemControlHighlightAltListAccentHighBrush" />
  <StaticResource x:Key="AccentFillColorBrush" ResourceKey="SystemControlBackgroundAccentBrush" />
  <StaticResource x:Key="SolidBackgroundFillColorBaseBrush" ResourceKey="SystemControlBackgroundAltHighBrush" />

  <!-- Strokes / borders -->
  <StaticResource x:Key="SurfaceStrokeColorDefaultBrush" ResourceKey="SystemControlForegroundBaseMediumBrush" />
  <StaticResource x:Key="DividerStrokeColorDefaultBrush" ResourceKey="SystemControlForegroundBaseMediumBrush" />
  <StaticResource x:Key="ControlStrongStrokeColorDefaultBrush" ResourceKey="SystemControlForegroundBaseMediumBrush" />

  <!-- Text brushes -->
  <StaticResource x:Key="TextFillColorPrimaryBrush" ResourceKey="SystemControlBackgroundBaseHighBrush" />
  <StaticResource x:Key="TextFillColorSecondaryBrush" ResourceKey="SystemControlBackgroundBaseMediumBrush" />
  <StaticResource x:Key="TextFillColorTertiaryBrush" ResourceKey="SystemControlBackgroundBaseLowBrush" />

  <!-- ~1~ System accent colors (approximate) @1@ -->
  <!-- <StaticResource x:Key="SystemAccentColor" ResourceKey="ThemeAccentColor" /> -->
  <!-- <StaticResource x:Key="SystemAccentColorLight1" ResourceKey="ThemeAccentColor" /> -->

  <!-- ListView/ListBox fallbacks (approximate to theme brushes/sizes) -->
  <StaticResource x:Key="ListViewItemBackground" ResourceKey="SystemControlBackgroundAltHighBrush" />
  <StaticResource x:Key="ListViewItemForeground" ResourceKey="SystemControlBackgroundBaseHighBrush" />
  <StaticResource x:Key="ListViewItemForegroundPointerOver" ResourceKey="SystemControlBackgroundBaseHighBrush" />
  <StaticResource x:Key="ListViewItemForegroundPressed" ResourceKey="SystemControlBackgroundBaseHighBrush" />
  <StaticResource x:Key="ListViewItemForegroundSelected" ResourceKey="SystemControlBackgroundBaseHighBrush" />
  <StaticResource x:Key="ListViewItemForegroundSelectedPointerOver" ResourceKey="SystemControlBackgroundBaseHighBrush" />
  <StaticResource x:Key="ListViewItemForegroundSelectedPressed" ResourceKey="SystemControlBackgroundBaseHighBrush" />
  <x:Double x:Key="ListViewItemMinWidth">40</x:Double>
  <x:Double x:Key="ListViewItemMinHeight">32</x:Double>

  <!-- Common control metrics approximations -->
  <CornerRadius x:Key="ControlCornerRadius">4</CornerRadius>

  <!-- TextBox button aliases used in ButtonStyles -->
  <StaticResource x:Key="TextControlButtonForeground" ResourceKey="SystemControlBackgroundBaseLowBrush" />
  <StaticResource x:Key="TextControlButtonBorderBrush" ResourceKey="SystemControlForegroundBaseMediumBrush" />
  <Thickness x:Key="TextBoxInnerButtonMargin">2,0</Thickness>
  <x:Double x:Key="TextBoxIconFontSize">12</x:Double>
  <StaticResource x:Key="TextControlButtonBackgroundPointerOver" ResourceKey="SystemControlBackgroundAltHighBrush" />
  <StaticResource x:Key="TextControlButtonBorderBrushPointerOver" ResourceKey="SystemControlForegroundBaseMediumBrush" />
  <StaticResource x:Key="TextControlButtonForegroundPointerOver" ResourceKey="SystemControlBackgroundBaseMediumBrush" />
  <StaticResource x:Key="TextControlButtonBackgroundPressed" ResourceKey="SystemControlBackgroundAltHighBrush" />
  <StaticResource x:Key="TextControlButtonBorderBrushPressed" ResourceKey="SystemControlForegroundBaseMediumBrush" />
  <StaticResource x:Key="TextControlButtonForegroundPressed" ResourceKey="SystemControlBackgroundBaseHighBrush" />

</ResourceDictionary>
